var x = 5;
if x > 0 {
    x = 7;
}
assert x == 7;

var x = -1;
if x > 0 {
    x = 7;
}
assert x == -1;

var x = 5;
if x > 0 {
    x = 7;
} else {
    x = 3;
}
assert x == 7;

